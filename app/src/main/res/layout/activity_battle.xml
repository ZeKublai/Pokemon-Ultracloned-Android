<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/battle_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.ateneo.cie199.finalproject.BattleActivity">

    <RelativeLayout
        android:id="@+id/battle_scene_group"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/battle_bg">

        <ImageButton
            android:id="@+id/imgbtn_battle_buddy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/imgbtn_battle_buddy"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/imgbtn_battle_enemy">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/enemy_bubble">

                <TextView
                    android:id="@+id/txv_battle_enemy_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/bar_battle_enemy_hp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/generation6"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txv_battle_enemy_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bar_battle_enemy_hp"
                    android:layout_alignEnd="@+id/bar_battle_enemy_hp"
                    android:layout_alignTop="@+id/txv_battle_enemy_name"
                    android:text="\t"
                    android:textAlignment="viewEnd" />

                <ProgressBar
                    android:id="@+id/bar_battle_enemy_hp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/lbl_battle_enemy_hp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txv_battle_enemy_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/lbl_battle_enemy_hp" />

                <TextView
                    android:id="@+id/lbl_battle_enemy_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txv_battle_enemy_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/generation6"
                    android:text="HP"
                    android:textSize="10sp" />
            </RelativeLayout>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/imgbtn_battle_enemy"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="35dp" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/imgbtn_battle_buddy"
            android:layout_below="@+id/relativeLayout"
            android:layout_toEndOf="@+id/imgbtn_battle_buddy">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buddy_bubble">

                <ProgressBar
                    android:id="@+id/bar_battle_buddy_exp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/lbl_battle_buddy_exp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/lbl_battle_buddy_exp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@+id/lbl_battle_buddy_exp" />

                <TextView
                    android:id="@+id/lbl_battle_buddy_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txv_battle_buddy_hp"
                    android:layout_marginLeft="20dp"
                    android:layout_toStartOf="@+id/bar_battle_buddy_hp"
                    android:fontFamily="@font/generation6"
                    android:text="EXP"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/txv_battle_buddy_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/bar_battle_buddy_exp"
                    android:layout_alignStart="@+id/lbl_battle_buddy_HP"
                    android:layout_below="@+id/lbl_battle_buddy_HP"
                    android:fontFamily="@font/generation6"
                    android:textAlignment="textEnd"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/lbl_battle_buddy_HP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txv_battle_buddy_name"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/generation6"
                    android:text="HP"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txv_battle_buddy_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/generation6"
                    android:textSize="18sp" />

                <ProgressBar
                    android:id="@+id/bar_battle_buddy_hp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/lbl_battle_buddy_HP"
                    android:layout_alignEnd="@+id/txv_battle_buddy_name"
                    android:layout_below="@+id/txv_battle_buddy_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/lbl_battle_buddy_HP" />

                <TextView
                    android:id="@+id/txv_battle_buddy_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bar_battle_buddy_hp"
                    android:layout_alignEnd="@+id/txv_battle_buddy_name"
                    android:layout_alignTop="@+id/txv_battle_buddy_name"
                    android:text="\t"
                    android:textAlignment="viewEnd" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txv_battle_message"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/battle_scene_group"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/generation6"
        android:text="Message"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_battle_message"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/battle_scene_group"
        android:background="@drawable/message_box" />

    <Button
        android:id="@+id/btn_battle_action"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv_battle_message"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_battle_btn5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/btn_battle_option5"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/btn_battle_option5"
                android:layout_margin="5dp" />

            <ImageView
                android:id="@+id/img_battle_btn3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/btn_battle_option3"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/btn_battle_option3"
                android:layout_margin="5dp" />

            <ImageView
                android:id="@+id/img_battle_btn1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/btn_battle_option1"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/btn_battle_option1"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/btn_battle_option7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/generation6"
                android:paddingLeft="55dp"
                android:text="7"
                android:textAlignment="viewStart"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_battle_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_battle_option3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/generation6"
                android:paddingLeft="55dp"
                android:text="1"
                android:textAlignment="viewStart"
                android:textAllCaps="false" />

            <ProgressBar
                android:id="@+id/bar_battle_btn1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn_battle_option1"
                android:layout_alignEnd="@+id/btn_battle_option1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/img_battle_btn1" />

            <Button
                android:id="@+id/btn_battle_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_battle_option5"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/generation6"
                android:paddingLeft="55dp"
                android:text="3"
                android:textAlignment="viewStart"
                android:textAllCaps="false" />

            <ProgressBar
                android:id="@+id/bar_battle_btn3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn_battle_option3"
                android:layout_alignEnd="@+id/btn_battle_option3"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/img_battle_btn3" />

            <Button
                android:id="@+id/btn_battle_option5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_battle_option7"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/generation6"
                android:paddingLeft="55dp"
                android:text="5"
                android:textAlignment="viewStart"
                android:textAllCaps="false" />

            <ProgressBar
                android:id="@+id/bar_battle_btn5"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn_battle_option5"
                android:layout_alignEnd="@+id/btn_battle_option5"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/img_battle_btn5" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/bar_battle_btn6"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn_battle_option6"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/img_battle_btn6" />

            <ProgressBar
                android:id="@+id/bar_battle_btn4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn_battle_option4"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/img_battle_btn4" />

            <ProgressBar
                android:id="@+id/bar_battle_btn2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn_battle_option2"
                android:layout_alignEnd="@+id/btn_battle_option2"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/img_battle_btn2" />

            <ImageView
                android:id="@+id/img_battle_btn6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/btn_battle_option6"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/btn_battle_option6"
                android:layout_margin="5dp" />

            <ImageView
                android:id="@+id/img_battle_btn2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/btn_battle_option2"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/btn_battle_option2"
                android:layout_margin="5dp" />

            <ImageView
                android:id="@+id/img_battle_btn4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/btn_battle_option4"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/btn_battle_option4"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/btn_battle_option6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_battle_run"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/generation6"
                android:paddingLeft="55dp"
                android:text="6"
                android:textAlignment="viewStart"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_battle_run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_margin="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="@font/generation6"
                android:paddingLeft="55dp"
                android:text="RUN"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="79dp" />

            <Button
                android:id="@+id/btn_battle_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_battle_option6"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/generation6"
                android:paddingLeft="55dp"
                android:text="4"
                android:textAlignment="viewStart"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_battle_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_battle_option4"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/btn_battle_run"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/generation6"
                android:paddingLeft="55dp"
                android:text="2"
                android:textAlignment="viewStart"
                android:textAllCaps="false" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
